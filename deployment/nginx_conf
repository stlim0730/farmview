# the upstream component nginx needs to connect to
upstream django {
  server 127.0.0.1:8001; # This means an internal proxy port for Django!
}

# configuration of the server
server {
  # the port your site will be served on
  listen      8888;
  # the domain name it will serve for
  server_name localhost; # substitute your machine's IP address or FQDN
  charset     utf-8;
  sendfile    off; # to avoid caching problems

  # max upload size
  client_max_body_size 75M;   # adjust to taste

  # Django media
  location /media  {
    alias /farmview/static;  # your Django project's media files - amend as required
  }

  location /static {
    alias /farmview/static; # your Django project's static files - amend as required
  }

  # Finally, send all non-media requests to the Django server.
  location / {
    uwsgi_pass  django;
    include     /etc/nginx/uwsgi_params; # the uwsgi_params file you installed
  }
}
